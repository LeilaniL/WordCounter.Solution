  <!DOCTYPE html>
  <html>
    <head>
      <title>Word Counter</title>
      <link rel='stylesheet' href='https://maxcdn.bootstrapcdn.com/bootstrap/3.2.0/css/bootstrap.min.css'>
     <link rel='stylesheet' href='~/css/styles.css'>
    </head>
    <body>
      <div class="container">
        <div class="transparent">
          <h1>Count Results</h1>
          @if(Model.matchCounter(Model.QueryWord, Model.ArrayFromSentence)!=0)
          {
          <p>@Model.QueryWord appears <b>@Model.matchCounter(Model.QueryWord, Model.ArrayFromSentence)</b> times in the text.</p>
          } else
          {
            <p>@Model.QueryWord is not in the given text!</p>
          }
        </div>
      </div>
    </body>
  </html>